body
  background-color red
  -webkit-perspective 1000px

#paperjs-canvas
  width 100%
  height 100%
  background-color white
  -webkit-transform-origin 0 0 0
  -webkit-transform rotateY(0deg)
  

p.instruction
  font-size   0.8em
  position    absolute
  z-index     2
  left        1em
  white-space pre